@model MailSender.Models.PopupModel


<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="hideModalForm()">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Popup", "Home", FormMethod.Post, new { id = "popupForm" }))
                {
                    <div class="form-group mt-3 pl-5 pr-5">
                        @Html.ValidationMessageFor(m => m.Name)<br />
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control mb-2 login-form-skarby", placeholder = "Imię" })
                    </div>
                    <button type="submit" id="buttonSubmit" style="display: none;"></button>}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="hideModalForm()" >Close</button>
                <button type="button" class="btn btn-primary" onclick="saveModalForm()">Save changes</button>
            </div>
        </div>
    </div>
</div>
